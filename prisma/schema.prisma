generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// datasource db {
//   provider = "sqlite"
//   url      = env("DATABASE_URL")
// }

model VideosLink {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  serviceId String   @db.ObjectId // Use @db.ObjectId to match the Services model
  service   Services @relation(fields: [serviceId], references: [id])
}

model Services {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  titleAr       String
  description   String
  descriptionAr String
  icon          String
  coverImg      String
  imgOne        String?
  imgTwo        String?
  imgThree      String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  videosLink    VideosLink[]
}

model highlights {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nameEn    String
  nameAr    String
  number    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AvailableJobs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  jobNameEn String
  jobNameAr String
  available Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Jobs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  governorate String
  phone       String
  email       String
  file        String
  jobName     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model News {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  image         String
  title         String
  titleAr       String
  description   String
  descriptionAr String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Contacts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  branch    String?
  mobile    String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Branches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  nameAr     String
  location   String
  locationAr String
  mobile     String
  whatsApp   String
  image      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum ClientType {
  syndicates
  healthcareCompanies
  discountContractCompanies
  contractingCompanies
}

model Clients {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  nameAr    String
  image     String
  type      ClientType
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
